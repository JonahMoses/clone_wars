<div id="bg-image">
  <!-- TITLE -->
  <div id="outertitle">
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <div class="pagetitle">
            <h1>Admin Dashboard</h1>
            <% if flash[:notice] %>
              <p style="font-size: 2em; font-weight: bold; color: red;"><%= flash[:notice] %></p>
            <% end %>
            <div class="pagedesc"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END TITLE -->
  <div class="slider-pattern"></div>
  <img src="/images/bgheader/bg-header1.jpg" alt="" />
</div>

</header>
</div>
<!-- END HEADER -->
<br />
<div style="width: 100%">
  <table style="margin: 0 auto; width: 98%" border="1">

      <tr>
        <th>Active</th>
        <th>Meal</th>
        <th>Course</th>
        <th>Meal Order</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Created At</th>
        <th>Updated At</th>
      </tr>

    <% all_items.each do |item| %>

      <form action="/update_database" method="POST">
        <input type="hidden" name="_method" value="PUT"/>
        <fieldset>
        <tr>
          <td>
            <% item[:active] %>&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name= "menu_item[active]"/>
          </td>
          <td>
            <select>
              <% menu.meals.each do |meal| %>
                <option <% if item[:meal] == meal %> selected <% end %> name="menu_item[course]" value="meal"><%= meal %></option>
              <% end %>
            </select>
          </td>
          <td>
            <select>
              <% menu.courses.each do |course| %>
                <option <% if item[:course] == course %> selected <% end %> name="menu_item[course]" value="course"><%= course %></option>
              <% end %>
            </select>
          </td>
          <td><input type="text" name="menu_item[meal_order]" value="<%= item[:meal_order] %>"></td>
          <td><input type="text" name="menu_item[name]" value="<%= item[:name] %>"></td>
          <td><input type="text" name="menu_item[description]" value="<%= item[:description] %>"></td>
          <td><input type="text" name="menu_item[price]" value="<%= item[:price] %>"></td>
          <td><%= item[:created_at].strftime("%-m/%e/%y") %></td>
          <td><%= item[:updated_at].strftime("%-m/%e/%y") %></td>
        </tr>
    <% end %>

  </table>
  <br />
        <input style="width: 15%; float: right; margin-right: 15px" type="submit" name="submit" class="button" id="submit_btn" value="Save Changes"/>
        </fieldset>
      </form>
      <form action="/" method="POST">
        <input style="width: 15%; float: left; margin-left: 15px" type="submit" name="add_item" class="button" id="submit_btn" data-toggle="modal" data-target="#myModal" value="Add New Item"/>
      </form>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" style="text-align: center">Enter New Menu Item</h4>
      </div>
      <div class="modal-body">
        <form action='/' method='POST'>
          Meal: <input style="width: 540px" type='text' name='meal[meal]' value="" />
          Course: <input style="width: 540px" type='text' name='meal[course]' value="" />
          Meal Order: <input style="width: 540px" type='text' name='meal[meal_order]' value="" />
          Name: <input style="width: 540px" type='text' name='meal[name]' value="" />
          Description: <input style="width: 540px" type='text' name='meal[description]' value="" />
          Price: <input style="width: 540px" type='text' name='meal[price]' value="" />
          <input style="width: 25%; float: left; margin-left: 15px" type="submit" name="add_item" class="button" id="submit_btn" value="Add New Item"/>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
